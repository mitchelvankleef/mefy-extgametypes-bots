under_map_thread local.delay local.botz local.topz:
	local.idx = 0

	while (1)
	{
		if ($player.size > 0)
		{
			local.idx++
		
			if (local.idx > $player.size)
			{
				local.idx = 1
			}
		
			local.player = $player[local.idx]
			if (local.player != NIL && local.player != NULL && local.player.mef_pstate == "PSTATE_ALIVE" && IsAlive(local.player))
			{
				if (waitthread is_under_map local.player local.botz local.topz)
				{
					local.player takedamage
					local.player hurt 1000
					local.player iprint "You were killed for going under the map."
				}
			}
		}
		
		wait local.delay
	}
end


is_under_map local.player local.botz local.topz:
	local.zlow = -8000
	local.zhigh = 8000

	local.orglow = local.player.origin
	local.orglow[2] = local.zlow
		
	local.orghigh = local.player.origin
	local.orghigh[2] = local.zhigh
		
	local.down = trace (local.player.origin + ( 0 0 10 )) local.orglow 1 ( -5 -5 0 ) ( 5 5 0 )
	local.up = trace local.orglow local.orghigh

//	println ("BOTZ: " + local.up[2] + " TOPZ: " + local.down[2])

	if (((abs (local.down[2] - local.topz)) < 0.001) && ((abs (local.up[2] - local.botz)) < 0.001))
	{
		end 1
	}
end 0


