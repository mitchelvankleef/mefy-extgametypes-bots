parse_game_version local.gameversions local.verstring:
	for (local.i = 0; local.i < local.gameversions.size; local.i++)
	{
		local.version = local.gameversions[local.i]

		local.match = 1
		for (local.j = 0; local.j < local.version[2].size; local.j++)
		{
			if (local.j >= local.verstring.size || local.version[2][local.j] != local.verstring[local.j])
			{
				local.match = 0
				break
			}
		}

		if (local.match)
		{
			local.selversion = local.version
			break
		}
	}

	if (local.selversion != NIL)
	{
		local.vernum = ""
		for (local.j = local.selversion[2].size; (local.j < local.verstring.size && local.verstring[local.j] == " "); local.j++) {}
		for (; (local.j < local.verstring.size && local.verstring[local.j] != " "); local.j++)
		{
			local.vernum += local.verstring[local.j]
		}

		end local.selversion[1]::local.vernum::local.selversion[3]
	} else
	{
		end "aa"::"1.11"::"aa"
	}
end


