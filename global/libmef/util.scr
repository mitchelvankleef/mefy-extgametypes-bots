	for (local.i = 0; local.i < local.str.size; local.i++)
	{
		local.char = string local.str[local.i]
		if (local.carray[local.char] || (local.char == local.escchar))
		{
			local.result += local.escchar
		}
		
		local.result += local.char
	}
end local.result


split_string local.str local.seps local.keepseps local.singlesep local.escchar:
	local.result[0] = NIL
	
	local.separray = waitthread make_sep_array local.seps

	local.i = 0
	local.escape = 0

	while (1)
	{
		local.item = ""
		while (local.i < local.str.size && (local.escape || !local.separray[(string local.str[local.i])]))
		{
			local.char = local.str[local.i]
			if (!local.escape && (local.char == local.escchar))
			{
				local.escape = 1
			} else
			{
				local.item += local.char
				local.escape = 0
			}
			local.i++
		}

		if (local.item != "" || local.keepseps)
		{
			local.result[local.result.size] = local.item
		}
	
		if (local.i == local.str.size)
		{
			end local.result
		}

		local.item = ""
		while (local.i < local.str.size && local.separray[(string local.str[local.i])])
		{
			local.item += local.str[local.i]
			local.i++
			
			if (local.singlesep)
			{
				break
			}
		}
		
		if (local.keepseps)
		{
			local.result[local.result.size] = local.item
		}
	}
end


string_popitem local.str local.seps:
