// Round Based Scoring System


begin_round_based_game local.resetthread local.teamwinthread:
	level.mef_rbdata = spawn script_origin
	level.mef_rbdata.origin = ( 0 0 0 )
	level.mef_rbdata.resetthread = local.resetthread
	level.mef_rbdata.teamwinthread = local.teamwinthread

	level.mef_score["allies"] = 0
	level.mef_score["axis"] = 0

	waitthread global/libmef/hud.scr::register_hud_item 1 global/libmef/util.scr::setup_score_display global/libmef/util.scr::update_score_display

	if (level.mef_rbdata.resetthread)
	{
		waitthread level.mef_rbdata.resetthread
	}

	waitthread turn_off_clock

	if (level.mef_settings["suddendeath"] > 0)
	{
		local.sdmins = level.mef_settings["suddendeath"]
	} else
	{
		local.sdmins = 0
	}

	if (level.mef_settings["fsuddendeath"] > 0)
	{
		local.fsdmins = level.mef_settings["fsuddendeath"]
	} else
	{
		local.fsdmins = 0
	}

	thread check_time local.sdmins local.fsdmins
end


turn_off_clock:
	level.clockside = "draw"
	level.defusing_team = "axis"
	level.planting_team = "allies"
	level.bombs_planted = 1
	level.bomb_set = 1
end


turn_on_clock local.clockside:
	level.clockside = local.clockside
	level.bombs_planted = 0
	level.bomb_set = 0
end


check_time local.sdmins local.fsdmins:
	local.starttime = level.time

	if (local.sdmins == 0 && local.fsdmins > 0)
	{
		local.fsuddendeath = 1
	}

	while (!level.mef_gameover)
	{
		local.elapsedtime = level.time - local.starttime

		if (local.elapsedtime >= ((level.dmroundlimit * 60) - 1) && !level.mef_scoring["allies"] && !level.mef_scoring["axis"])
		{
			if (level.mef_score["allies"] == level.mef_score["axis"])
			{
				if ((local.sdmins + local.fsdmins) > 0)
				{
					thread sudden_death local.sdmins local.fsdmins
				} else
				{
					waitthread do_teamwin draw
				}
			} else if (level.mef_score["allies"] > level.mef_score["axis"])
			{
				waitthread do_teamwin allies
			} else
			{
				waitthread do_teamwin axis
			}
			end
		} else if (local.fsuddendeath && !local.announcefsd && local.elapsedtime >= ((level.dmroundlimit * 60) - 20))
		{
			local.announcefsd = 1
			iprintlnbold_noloc "Warning: Respawning ends in 20 seconds."
		}

		wait 1
	}
end


sudden_death local.sdmins local.fsdmins:
	local.totalmins = local.sdmins + local.fsdmins

	level.mef_suddendeath = 1
	
	if (local.sdmins > 0)
	{
		iprintlnbold_noloc (local.sdmins + " Minute Sudden Death: Next score wins the round.")
	}
	level.mef_updatehud = 1

	local.endtime = level.time + (local.totalmins * 60)
	local.fsdtime = level.time + (local.sdmins * 60)
	
	if (local.fsdmins > 0)
	{
		local.autonuke = 1
	}
	
	while (!level.mef_gameover)
	{
		if (level.time >= local.endtime)
		{
			level.mef_timeexpired = 1
			if (local.autonuke)
			{
				level.mef_autonuke = 1
			}
			end
		} else if (local.fsdmins > 0 && !level.mef_fsuddendeath && level.time >= local.fsdtime)
		{
			level.mef_fsuddendeath = 1			
			iprintlnbold_noloc (local.fsdmins + " Minute Final Sudden Death: Respawning disabled.")
			waitthread global/libmef/respawn.scr::disable_respawn
		} else if (local.fsdmins > 0 && !level.mef_fsuddendeath && !local.announcefsd && level.time >= (local.fsdtime - 20))
		{
			local.announcefsd = 1
			iprintlnbold_noloc "Warning: Respawning ends in 20 seconds."
		} else if (local.autonuke && !local.announcenuke && level.time >= (local.endtime - 20))
		{
			local.announcenuke = 1
			thread global/libmef/respawn.scr::teamnuke_thread 20
		}

		wait 1
	}
end


get_winner_score:
	if (!level.mef_suddendeath)
	{
		end
	}

	local.rbwinner = waitthread global/libmef/respawn.scr::get_winner_rb
	
	if (local.rbwinner == NIL && level.mef_timeexpired)
	{
		local.rbwinner = "draw"
	}

	if (local.rbwinner == "draw")
	{
		if (level.mef_scoring["allies"] && level.mef_scoring["axis"])
		{
			// both are scoring, wait till it completes
			local.announcescoring = 1
		} else if (level.mef_scoring["allies"])
		{
			local.winner = "allies"
		} else if (level.mef_scoring["axis"])
		{
			local.winner = "axis"
		} else
		{
			local.winner = "draw"
		}
	} else if (local.rbwinner == "allies")
	{
		if (level.mef_scoring["axis"])
		{
			local.announcescoring = 1
		} else
		{
			local.winner = "allies"
		}
	} else if (local.rbwinner == "axis")
	{
		if (level.mef_scoring["allies"])
		{
			local.announcescoring = 1
		} else
		{
			local.winner = "axis"
		}
	}

	if (local.announcescoring && !level.mef_announcedscoring)
	{
		iprintlnbold_noloc "A score is in progress!"
		level.mef_announcedscoring = 1
	}
end local.winner


team_scored local.team:
	if (level.mef_gameover)
	{
		end
	}

	level.mef_score[local.team]++
	level.mef_updatehud = 1

	local.otherteam = waitthread get_other_team local.team

	if ((waitthread check_win local.team) && ((level.mef_suddendeath == 1) || !level.mef_scoring[local.otherteam]))
	{
		waitthread do_teamwin local.team
		end 1
	}

	level.mef_scoring[local.team] = NIL

	if (local.team == "allies")
	{
		local.str = "Allies score!"
		level.mef_rbdata playsound ("dfr_victory_v0" + string(randomint(3) + 1))
	} else
	{
		local.str = "Axis scores!"
		level.mef_rbdata playsound ("den_victory_v0" + string(randomint(3) + 1))
	}

	thread global/message_print.scr::message local.str

	if (level.mef_scoring[local.otherteam])
	{
		thread check_win_later local.team
	}

	if (level.mef_rbdata.resetthread)
	{
		waitthread level.mef_rbdata.resetthread
	}

	end 0
end


check_win_later local.team:
	local.otherteam = waitthread get_other_team local.team

	while (level.mef_scoring[local.otherteam] && !level.mef_suddendeath)
	{
		waitframe
	}

	if ((waitthread check_win local.team))
	{
		waitthread do_teamwin local.team
	}
end


check_win local.team:
	local.otherteam = waitthread get_other_team local.team

	if ((level.mef_score[local.team] > level.mef_score[local.otherteam]) && \
	    (level.mef_suddendeath || \
	    ((level.mef_settings["pointlimit"] > 0) && (level.mef_score[local.team] >= level.mef_settings["pointlimit"]))))
	{
		end 1
	}
end 0


get_other_team local.team:
	if (local.team == "allies")
	{
		end "axis"
	} else if (local.team == "axis")
	{
		end "allies"
	} else
	{
		end "both"
	}
end


parse_clockside local.clockside:
	switch (local.clockside)
	{
		case 255:
		case "allies":
			end "allies"
			break
			
		case 256:
		case "axis":
			end "axis"
			break
		
		case 257:
		case "draw":
			end "draw"
			break
		
		case 258:
		case "kills":
			end "kills"
			break
			
		default:
			end "draw"
			break
	}
end
			
		
do_teamwin local.team:
	if (level.mef_basegametype == NIL)
	{
		teamwin local.team
		end
	}

	level.mef_gameover = 1

	waitthread display_credits level.mef_credits

	if (level.mef_rbdata != NIL && level.mef_rbdata.teamwinthread != NIL)
	{
		waitthread level.mef_rbdata.teamwinthread local.team
	}

	if (local.team == "allies" || local.team == "axis")
	{
		waitthread teamwin_wrapper local.team
	} else
	{
		waitthread force_draw
	}

	thread hide_hud_delay
end


teamwin_wrapper local.team:
	if (level.mef_basegametype != 4 || level.mef_basegametype != 5 || level.mef_basegametype != 6)
	{
		setcvar "g_gametype" "4"  // Objective Match
	}

	teamwin local.team

	setcvar "g_gametype" level.mef_basegametype
end


force_draw:
	if (level.mef_baseversion == "bt")
	{
		waitthread teamwin_wrapper none
		end
	}

	level.clockside = "draw"
	level.bombs_planted = 0
	level.bomb_set = 0
	level.targets_to_destroy = 1
	level.targets_destroyed = 0
	if (level.mef_gametype == "fttow")
	{
		level commanddelay 0 ignoreclock 0
	}

	if (level.mef_elapsedtime < ((level.dmroundlimit * 60) - 1))
	{
		if (level.mef_elapsedtime < 62)
		{
			// kill all players
			level.mef_disablespectating = 1
			waitframe
			waitframe
			
			level.dmrespawning = 0
			waitthread global/libmef/respawn.scr::disable_respawn

			for (local.i = 1; local.i < ($player.size + 1); local.i++)
			{
				local.player = $player[local.i]
				if (local.player != NIL && local.player != NULL)
				{
					local.player takedamage
					local.player hurt 1000
				}
			}
		} else
		{
			// temp set roundlimit to 1
			local.roundlimit = int (getcvar "roundlimit")
			setcvar "roundlimit" "1"
			waitframe
			setcvar "roundlimit" local.roundlimit
		}
	} else
	{
		// wait for the clock to expire so the hud turns off at the precise time
		local.waittime = (level.dmroundlimit * 60) - level.mef_elapsedtime
		if (local.waittime > 0)
		{
			wait local.waittime
		}
	}
	
	thread force_draw_failsafe
end


force_draw_failsafe:
	wait 8
	
	// failsafe to force the draw if the other methods didnt work
	local.manager = spawn DM_Manager
	local.manager doroundtransition
end


hide_hud_delay:
	wait 1.75
	
	if (level.mef_settings["observe_builtin"])
	{
		level.mef_disablespectating = 1
	}

	wait 0.25
	
	// turn off the center message
	thread global/message_print.scr::message ""
	huddraw_alpha 26 0
	huddraw_alpha 27 0
	level.mef_hidehud = 1
end


display_credits local.credits:
	if (local.credits == NIL)
	{
		end
	}

	for (local.i = 0; local.i < 6; local.i++)
	{
		if (local.credits[local.i] == NIL)
		{
			local.credits[local.i] = ""
		}
	}

	setcvar "g_obj_alliedtext1" local.credits[0]
	setcvar "g_obj_alliedtext2" local.credits[1]
	setcvar "g_obj_alliedtext3" local.credits[2]
	setcvar "g_obj_axistext1"   local.credits[3]
	setcvar "g_obj_axistext2"   local.credits[4]
	setcvar "g_obj_axistext3"   local.credits[5]
	
	if (level.mef_basegametype == 5)
	{
		setcvar "g_obj_alliedtext4" ""
		setcvar "g_obj_alliedtext5" ""
		setcvar "g_obj_axistext4" ""
		setcvar "g_obj_axistext5" ""
	}
end


setup_score_display:
	local.coordx = -163
	local.coordy = 70

	huddraw_align  self.idx right top
	huddraw_font   self.idx facfont-20
	huddraw_rect   self.idx (local.coordx + 30) local.coordy 100 100
	huddraw_color  self.idx 1.0 1.0 1.0
	huddraw_alpha  self.idx 1.0
end


update_score_display:
	local.str = "Allies: " + level.mef_score["allies"] + " Axis: " + level.mef_score["axis"]

	if (level.mef_suddendeath == 1)
	{
		local.str += " [SD]"
	} else if (level.mef_settings["pointlimit"] > 0)
	{
		local.str += " [" + level.mef_settings["pointlimit"] + "]"
	}

	huddraw_string self.idx local.str
end
